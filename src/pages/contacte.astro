---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/Container.astro";
import { Image } from "astro:assets";
import Logo from "/public/images/logo-contacte.webp";
---

<Layout title="Sant Quirze Sobre Rodes - Contacte">
  <Container className="pt-[68px]">
    <h1 class="text-center text-4xl my-4 font-bold">
      Club Esportiu de Patinatge en Sant Quirze del Vallés
    </h1>
    <section>
      <div class="flex flex-col w-full">
        <div class="w-full h-full bg-foreground md:rounded-l-md py-5">
          <Image 
            src={Logo}
            alt='Logo image'
            width="160"
            height="160"
            class="mx-auto rounded-md"
          />
          <div class="grid grid-cols-1 lg:grid-cols-3 w-full px-10 mt-10 gap-5">
            <div class="card flex flex-col items-center text-center">
              <h3 class="text-2xl text-terciary font-semibold">Horari</h3>
              <p class="font-semibold mt-4">De Dilluns a Divendres:</p>
              <p class="font-light">De 9:00 a 18:00</p>
              <p class="font-semibold mt-4">Fines de Setmana:</p>
              <p class="font-light">Tancat</p>
            </div>
            <div class="card flex flex-col items-center text-center">
              <h3 class="text-2xl text-terciary font-semibold">Contacte</h3>
              <a href="tel:+346443661" class="font-semibold mt-4"><span class="font-light">+34 6443661</span></a>
            </div>
            <div class="card flex flex-col items-center text-center">
              <h3 class="text-2xl text-terciary font-semibold">¿On Estem?</h3>
              <p class="font-light mt-4">08192 Sant Quirze del Vallès, Barcelona</p>
            </div>
          </div>          
        </div>
      </div>
    </section>
    <section class="flex flex-col w-full h-[400px] py-10">
      <h2 class="text-center text-3xl my-4">Com arribar a nosaltres</h2>
      <iframe
        class="w-full h-full md:rounded-r-md"
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2986.8157584931137!2d2.077528576488736!3d41.5299313871407!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12a495a9e58faba7%3A0xa5ce2c5c86e08722!2sClub%20Esportiu%20Sant%20Quirze%20Sobre%20Rodes!5e0!3m2!1ses!2ses!4v1729540613815!5m2!1ses!2ses"
        width="600"
        height="450"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"></iframe>
    </section>
  </Container>
</Layout>
